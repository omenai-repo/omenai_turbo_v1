{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "globalEnv": [
    "NEXT_PUBLIC_URL_API_DEVELOPMENT",
    "MONGODB_URI",
    "MONGODB_PASSWORD",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "NEXT_PUBLIC_APPWRITE_CLIENT_ID",
    "NEXT_PUBLIC_APPWRITE_BUCKET_ID",
    "NEXT_PUBLIC_APPWRITE_LOGO_BUCKET_ID",
    "NEXT_PUBLIC_APPWRITE_EDITORIAL_PROJECT_ID",
    "NEXT_PUBLIC_APPWRITE_EDITORIAL_BUCKET_ID",
    "NEXT_PUBLIC_APPWRITE_EDITORIAL_DATABASE_ID",
    "NEXT_PUBLIC_APPWRITE_EDITORIAL_COLLECTION_ID",
    "NEXT_PUBLIC_APPWRITE_PROMOTIONAL_BUCKET_ID",
    "NEXT_PUBLIC_APPWRITE_PROMOTIONAL_CLIENT_ID",
    "NEXT_PUBLIC_APPWRITE_GALLERY_LOGO_BUCKET_ID",
    "NEXT_PUBLIC_APPWRITE_GALLERY_LOGO_CLIENT_ID",
    "GMAIL_ADDRESS",
    "GMAIL_APP_PASS",
    "RESEND_API_KEY",
    "SENDGRID_API_KEY",
    "FLW_TEST_PUBLIC_KEY",
    "FLW_TEST_SECRET_KEY",
    "FLW_TEST_ENCRYPTION_KEY",
    "FLW_PAYMENT_PLAN_ID",
    "FLW_SECRET_HASH",
    "STRIPE_SK",
    "STRIPE_PK",
    "STRIPE_PAYMENT_INTENT_WEBHOOK_SECRET",
    "STRIPE_CHECKOUT_SESSION_WEBHOOK_SECRET",
    "EXCHANGE_RATE_API_KEY",
    "NEXT_PUBLIC_BASIC_PLAN",
    "NEXT_PUBLIC_PRO_PLAN",
    "NEXT_PUBLIC_PREMIUM_PLAN",
    "NEXT_PUBLIC_TINYMCE_API_KEY",
    "NODE_ENV",
    "APP_AUTHORIZATION_SECRET",
    "FIREBASE_API_KEY",
    "FIREBASE_APP_ID",
    "FIREBASE_MEASUREMENT_ID",
    "FIREBASE_MESSAGING_SENDER_ID",
    "FIREBASE_AUTH_DOMAIN",
    "FIREBASE_STORAGE_BUCKET",
    "FIREBASE_PROJECT_ID",
    "JWT_SECRET",
    "DHL_API_KEY",
    "DHL_API_SECRET"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_URL_API_DEVELOPMENT",
        "MONGODB_URI",
        "MONGODB_PASSWORD",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "NEXT_PUBLIC_APPWRITE_CLIENT_ID",
        "NEXT_PUBLIC_APPWRITE_BUCKET_ID",
        "NEXT_PUBLIC_APPWRITE_LOGO_BUCKET_ID",
        "NEXT_PUBLIC_APPWRITE_EDITORIAL_PROJECT_ID",
        "NEXT_PUBLIC_APPWRITE_EDITORIAL_BUCKET_ID",
        "NEXT_PUBLIC_APPWRITE_EDITORIAL_DATABASE_ID",
        "NEXT_PUBLIC_APPWRITE_EDITORIAL_COLLECTION_ID",
        "NEXT_PUBLIC_APPWRITE_PROMOTIONAL_BUCKET_ID",
        "NEXT_PUBLIC_APPWRITE_PROMOTIONAL_CLIENT_ID",
        "NEXT_PUBLIC_APPWRITE_GALLERY_LOGO_BUCKET_ID",
        "NEXT_PUBLIC_APPWRITE_GALLERY_LOGO_CLIENT_ID",
        "GMAIL_ADDRESS",
        "GMAIL_APP_PASS",
        "RESEND_API_KEY",
        "SENDGRID_API_KEY",
        "FLW_TEST_PUBLIC_KEY",
        "FLW_TEST_SECRET_KEY",
        "FLW_TEST_ENCRYPTION_KEY",
        "FLW_PAYMENT_PLAN_ID",
        "FLW_SECRET_HASH",
        "STRIPE_SK",
        "STRIPE_PK",
        "STRIPE_PAYMENT_INTENT_WEBHOOK_SECRET",
        "STRIPE_CHECKOUT_SESSION_WEBHOOK_SECRET",
        "EXCHANGE_RATE_API_KEY",
        "NEXT_PUBLIC_BASIC_PLAN",
        "NEXT_PUBLIC_PRO_PLAN",
        "NEXT_PUBLIC_PREMIUM_PLAN",
        "NEXT_PUBLIC_TINYMCE_API_KEY",
        "APP_AUTHORIZATION_SECRET",
        "FIREBASE_API_KEY",
        "FIREBASE_APP_ID",
        "FIREBASE_MEASUREMENT_ID",
        "FIREBASE_MESSAGING_SENDER_ID",
        "FIREBASE_AUTH_DOMAIN",
        "FIREBASE_STORAGE_BUCKET",
        "FIREBASE_PROJECT_ID",
        "JWT_SECRET",
        "DHL_API_KEY",
        "DHL_API_SECRET"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
